{% extends 'admin/base.html.twig' %}

{% block title %}Administration des annonces{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="my-5">Gestion des annonces</h1>
        <table class="table table-hover">
            <thead>
            <tr>
                <th>ID</th>
                <th>Titre</th>
                <th>Auteur</th>
                <th class="text-center">RÃ©servations</th>
                <th class="text-center">Note</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                {% for ad in ads %}
                <td>{{ ad.id }}</td>
                <td>{{ ad.title }}</td>
                <td>
                    <img src="{{ ad.author.picture }}" alt="Avatar de {{ ad.author.fullName }}"
                         class="avatar avatar-micro mr-2">
                    {{ ad.author.fullName }}</td>
                <td class="text-center">
                    <span class="badge badge-primary rounded">{{ ad.bookings|length }}</span>
                </td>
                <td class="text-center">
                    <span class="badge badge-primary rounded"> {{ ad.avgRatings|number_format(1,',',' ') }}</span>
                </td>
                <td>
                    <a href="#" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                    <a href="#" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                </td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
