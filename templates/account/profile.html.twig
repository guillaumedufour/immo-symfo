{% extends 'base.html.twig' %}

{% block title %} Modification du profil utilisateur {% endblock %}

{% block body %}
    <div class="container">
        <h1 class="my-5">Modification du profil</h1>
        {{ form_start(form) }}
        <div class="row">
            <div class="col">
                <div class="alert alert-light">
                    <h2 class="alert-heading">Informations Générales</h2>
                    <hr aria-hidden="true">
                    {{ form_row(form.firstname) }}
                    {{ form_row(form.lastname) }}
                    {{ form_row(form.email) }}
                    {{ form_row(form.picture) }}
                </div>
            </div>
            <div class="col">
                <div class="alert alert-light">
                    <h2 class="alert-heading">Détails</h2>
                    <hr aria-hidden="true">
                    {{ form_row(form.introduction) }}
                    {{ form_row(form.description) }}

                    <hr aria-hidden="true">
                    <p>Si vous avez terminé, n'oubliez pas d'enregistrer</p>
                    <button type="submit" class="btn btn-primary"><i class="fas fa-check"></i> Enregistrer les modifications</button>
                </div>
            </div>
        </div>

        {{ form_end(form) }}
    </div>
{% endblock %}

